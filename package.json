{
  "name": "@post-cards/core",
  "version": "0.0.0-development",
  "description": "@post-cards/core is a small node library for generating OpenGraph images for social media sharing.",
  "license": "MIT",
  "typings": "dist/types/index.d.ts",
  "main": "dist/post-card.cdj.js",
  "module": "dist/post-card.es.js",
  "type": "module",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "prepare": "npm run build:lib",
    "start": "rollup -c rollup.config.ts -w",
    "build:lib": "tsc --module commonjs && rollup -c rollup.config.ts",
    "build:docs": "typedoc --out docs --theme minimal lib/post-card.ts",
    "build": "npm run build:lib && npm run build:docs",
    "test": "c8 --check-coverage -r=text -r=lcov -x=tests ava --serial",
    "test:watch": "ava --serial --watch",
    "benchmark:latest": "npm run build:lib && npm run benchmark",
    "benchmark": "node ./benchmark/index.js",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'lib/**/*.ts' 'test/**/*.ts'",
    "semantic-release": "semantic-release",
    "report-coverage": "cat './coverage/lcov.info' | coveralls",
    "commit": "git-cz",
    "release": "standard-version",
    "precommit": "lint-staged",
    "prebuild": "rimraf dist docs",
    "pretest": "rimraf coverage"
  },
  "keywords": [
    "open-graph",
    "social-media",
    "nodejs"
  ],
  "author": "dev-warner",
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run lint && npm run test && npm run build"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "{lib,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "tests/unit/**/*"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "dependencies": {
    "@supercharge/promise-pool": "^1.7.0",
    "fs-extra": "^9.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^15.0.1",
    "@types/sinon": "^10.0.0",
    "ava": "^4.0.0-alpha.2",
    "c8": "^7.7.2",
    "canvas": "^2.7.0",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "faker": "^5.5.3",
    "git-cz": "^4.7.6",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.46.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-uglify": "^6.0.4",
    "semantic-release": "^17.4.2",
    "sinon": "^10.0.0",
    "source-map-support": "^0.5.19",
    "standard-version": "^9.3.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-warner/post-cards.git"
  }
}
